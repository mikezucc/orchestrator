    "@paralleldrive/cuid2": "^2.2.2",
    "@types/sshpk": "^1.17.4",
    "@types/ws": "^8.18.1",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.4.1",
    "drizzle-orm": "^0.29.3",
    "google-auth-library": "^9.6.0",
    "googleapis": "^128.0.0",
    "hono": "^4.0.0",
    "jsonwebtoken": "^9.0.2",
